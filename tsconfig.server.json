{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "types": ["node", "express", "vite/client"],
    "lib": ["ES2020"],
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["server/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "dist", "build", "client"]
}
